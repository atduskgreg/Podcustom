<h2>Edit Recording: <%= @recording.id %></h2>
<form action="/recordings/<%= @recording.id %>" method="POST">
	<p><label>Title</label> <input class="text" type="text" name="title" value="<%= @recording.title %>" /></p>
	<p><label>MP3 URL</label> <input class="text" type="text" name="mp3_url" value="<%= @recording.mp3_url %>" /></p>
	<p><label>Size (in MBs)</label> <input type="text" name="size" value="<%= @recording.size %>"/></p>
	<p><label>Description</label><textarea cols="50" rows="10" name="description" ><%= @recording.description %></textarea></p>
	<p><label>&nbsp;</label><input type="submit" value="update"/></p>
</form>
	